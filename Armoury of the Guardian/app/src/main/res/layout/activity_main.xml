<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_destiny1_vanilla"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/home_progressbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:padding="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="130dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="@string/search_for_weapons">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/home_weapon_searchbar"
                    style="@style/CustomTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_weapon_searchbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/buttonroundedimportant"
                    android:drawableLeft="@drawable/ic_search"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:backgroundTint="@color/button_search" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_button_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/buttonroundedimportant"
                    android:drawableLeft="@drawable/ic_music"
                    android:text="@string/change_music"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:backgroundTint="@color/button_music" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>